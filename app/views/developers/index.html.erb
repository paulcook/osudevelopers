<h1>Listing developers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>OSU name.#</th>
    <th>Team</th>
    <th>Github username</th>
    <th>Twitter username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @developers.each do |developer| %>
  <tr>
    <td><%= developer.name %></td>
    <td><%= developer.bio %></td>
    <td><%= developer.username %></td>
    <td><%= link_to developer.team.name, developer.team %></td>
    <td><%= developer.github_username %></td>
    <td><%= developer.twitter_username %></td>
    <td><%= link_to 'Show', developer %></td>
    <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
    <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

